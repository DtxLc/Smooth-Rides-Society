<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <section class="hero">
  <div class="hero-content">
    <h1>Welcome to Smooth Rides Society</h1>
    <p>Discover, share, and explore the world's most exciting sports cars</p>
    <div class="hero-buttons">
      <a href="/cars" class="btn-primary">Browse Cars</a>
      <% if (!currentUser) { %>
        <a href="/auth/register" class="btn-secondary">Join Now</a>
      <% } else { %>
        <a href="/cars/new" class="btn-secondary">Add Your Car</a>
      <% } %>
    </div>
  </div>
</section>

<section class="featured-cars">
  <h2>Featured Cars</h2>
  
  <div class="car-grid">
    <% if (featuredCars.length > 0) { %>
      <% featuredCars.forEach(car => { %>
        <div class="car-card">
          <div class="car-image">
            <img src="<%= car.imageUrl %>" alt="<%= car.year %> <%= car.make %> <%= car.model %>">
          </div>
          <div class="car-details">
            <h3><%= car.year %> <%= car.make %> <%= car.model %></h3>
            <p class="car-price"><%= car.formattedPrice %></p>
            <div class="car-specs">
              <span><i class="fas fa-tachometer-alt"></i> <%= car.horsepower %> HP</span>
              <% if (car.topSpeed) { %>
                <span><i class="fas fa-gauge-high"></i> <%= car.topSpeed %> mph</span>
              <% } %>
            </div>
            <p class="car-owner">Added by <a href="/users/<%= car.owner._id %>"><%= car.owner.username %></a></p>
            <a href="/cars/<%= car._id %>" class="btn-secondary">View Details</a>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="no-cars">No cars have been added yet. Be the first to <a href="/cars/new">add a car</a>!</p>
    <% } %>
  </div>
  
  <div class="view-all">
    <a href="/cars" class="btn-primary">View All Cars</a>
  </div>
</section>

<section class="features">
  <h2>Why Choose SRS?</h2>
  
  <div class="features-grid">
    <div class="feature">
      <i class="fas fa-car"></i>
      <h3>Extensive Collection</h3>
      <p>Browse through our extensive collection of sports cars from around the world.</p>
    </div>
    
    <div class="feature">
      <i class="fas fa-users"></i>
      <h3>Community</h3>
      <p>Join a community of sports car enthusiasts and share your passion.</p>
    </div>
    
    <div class="feature">
      <i class="fas fa-info-circle"></i>
      <h3>Detailed Information</h3>
      <p>Get detailed specifications and information about each sports car.</p>
    </div>
    
    <div class="feature">
      <i class="fas fa-mobile-alt"></i>
      <h3>Mobile Friendly</h3>
      <p>Access SRS from any device, anywhere, anytime.</p>
    </div>
  </div>
</section>
    <!-- Footer -->
    <footer class="main-footer">
        <div class="footer-container">
            <p>&copy; 2025 Smooth Rides Society. All rights reserved.</p>
        </div>
    </footer>
    <script src="/db.js"></script>
</body>
</html>
