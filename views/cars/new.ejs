<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
    
<section class="form-section">
  <h1>Add New Car</h1>
  
  <div class="form-container">
    <form action="/cars" method="POST" class="car-form">
      <div class="form-group">
        <label for="make">Make</label>
        <input 
          type="text" 
          id="make" 
          name="make" 
          required 
          value="<%= locals.car ? car.make : '' %>"
          autofocus
        >
      </div>
      
      <div class="form-group">
        <label for="model">Model</label>
        <input 
          type="text" 
          id="model" 
          name="model" 
          required
          value="<%= locals.car ? car.model : '' %>"
        >
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label for="year">Year</label>
          <input 
            type="number" 
            id="year" 
            name="year" 
            required
            min="1885"
            max="<%= new Date().getFullYear() + 1 %>"
            value="<%= locals.car ? car.year : new Date().getFullYear() %>"
          >
        </div>
        
        <div class="form-group">
          <label for="color">Color</label>
          <input 
            type="text" 
            id="color" 
            name="color" 
            required
            value="<%= locals.car ? car.color : '' %>"
          >
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label for="price">Price ($)</label>
          <input 
            type="number" 
            id="price" 
            name="price" 
            required
            min="0"
            step="0.01"
            value="<%= locals.car ? car.price : '' %>"
          >
        </div>
        
        <div class="form-group">
          <label for="horsepower">Horsepower</label>
          <input 
            type="number" 
            id="horsepower" 
            name="horsepower" 
            required
            min="0"
            value="<%= locals.car ? car.horsepower : '' %>"
          >
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label for="topSpeed">Top Speed (mph)</label>
          <input 
            type="number" 
            id="topSpeed" 
            name="topSpeed"
            min="0"
            step="0.1"
            value="<%= locals.car ? car.topSpeed : '' %>"
          >
        </div>
        
        <div class="form-group">
          <label for="zeroToSixty">0-60 mph (seconds)</label>
          <input 
            type="number" 
            id="zeroToSixty" 
            name="zeroToSixty"
            min="0"
            step="0.1"
            value="<%= locals.car ? car.zeroToSixty : '' %>"
          >
        </div>
      </div>
      
      <div class="form-group">
        <label for="imageUrl">Image URL</label>
        <input 
          type="url" 
          id="imageUrl" 
          name="imageUrl"
          placeholder="https://example.com/image.jpg"
          value="<%= locals.car ? car.imageUrl : '' %>"
        >
      </div>
      
      <div class="form-group">
        <label for="description">Description</label>
        <textarea 
          id="description" 
          name="description" 
          rows="5"
        ><%= locals.car ? car.description : '' %></textarea>
      </div>
      
      <div class="form-actions">
        <a href="/cars" class="btn-secondary">Cancel</a>
        <button type="submit" class="btn-primary">Add Car</button>
      </div>
    </form>
  </div>
</section>   