                <button id="add-car-btn" class="nav-link-button add-car-button">Add Car</button>
            </div>
        </div>
    </nav>
    <div class="main-content-container">
        <h2 class="section-title">Your Cars</h2>
        <div id="cars-container" class="cars-grid">
            <% if (cars.length === 0) { %>
                <div class="no-cars-message">
                    <p>No cars found. Add your first car!</p>
                </div>
            <% } else { %>
                <% cars.forEach(car => { %>
                    <div class="car-card">
                        <div class="car-image-container">
                            <img src="<%= car.image || 'https://placehold.co/600x400' %>" alt="<%= car.year %> <%= car.make %> <%= car.model %>" class="car-image">
                            <div class="car-actions">
                                <button class="edit-car-btn" data-id="<%= car.id %>">Edit</button>
                                <button class="delete-car-btn" data-id="<%= car.id %>">Delete</button>
                            </div>
                        </div>
                        <div class="car-details">
                            <h3 class="car-title"><%= car.year %> <%= car.make %> <%= car.model %></h3>
                            <p class="car-color">Color: <%= car.color %></p>
                            <p class="car-description"><%= car.description || 'No description provided' %></p>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>