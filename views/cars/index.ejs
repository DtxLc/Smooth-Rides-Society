<section class="cars-section">
  <div class="section-header">
    <h1>All Sports Cars</h1>
    <% if (currentUser) { %>
      <a href="/cars/new" class="btn-primary">Add New Car</a>
    <% } %>
  </div>
  
  <div class="car-grid">
    <% if (cars.length > 0) { %>
      <% cars.forEach(car => { %>
        <div class="car-card">
          <div class="car-image">
            <img src="<%= car.imageUrl %>" alt="<%= car.year %> <%= car.make %> <%= car.model %>">
          </div>
          <div class="car-details">
            <h3><%= car.year %> <%= car.make %> <%= car.model %></h3>
            <p class="car-price"><%= car.formattedPrice %></p>
            <div class="car-specs">
              <span><i class="fas fa-tachometer-alt"></i> <%= car.horsepower %> HP</span>
              <% if (car.topSpeed) { %>
                <span><i class="fas fa-gauge-high"></i> <%= car.topSpeed %> mph</span>
              <% } %>
            </div>
            <p class="car-owner">Added by <a href="/users/<%= car.owner._id %>"><%= car.owner.username %></a></p>
            <a href="/cars/<%= car._id %>" class="btn-secondary">View Details</a>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="no-cars">No cars have been added yet. <% if (currentUser) { %>Be the first to <a href="/cars/new">add a car</a>!<% } else { %><a href="/auth/login">Login</a> to add a car.<% } %></p>
    <% } %>
  </div>
</section>
